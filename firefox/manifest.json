{

  "manifest_version": 3,
  "name": "imoin-beta",
  "version": "26.0.0",

  "description": "Monitor your icinga or nagios instance.",

  "developer": {
    "name": "Erik Wegner",
    "url": "https://imoin.qwirl.eu/"
  },

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
    "page": "background-page.html"
  },

  "action": {
    "browser_style": false,
    "default_popup": "html/panel.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },

  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "html/options.html"
  },

  "permissions": [
    "alarms",
    "storage"
  ],

  "host_permissions": [
    "https://*/",
    "http://*/"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "imoin_we_beta@ewus.de",
      "update_url": "https://imoin.qwirl.eu/imoin-beta.json",
      "strict_min_version": "45.0"
    }
  }

}
